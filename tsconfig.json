{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "declarationDir": "./build"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules", "./build"]
}
